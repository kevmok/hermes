{
  "name": "hermes",
  "version": "1.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "services/*"
    ],
    "catalog": {
      "react": "^19.0.0",
      "react-dom": "^19.0.0",
      "@t3-oss/env-core": "latest",
      "convex": "^1.31.2",
      "convex-helpers": "^0.1.108",
      "zod": "^4.2.1"
    },
    "catalogs": {
      "auth": {
        "better-auth": "1.4.7",
        "@convex-dev/better-auth": "^0.10.6"
      },
      "tanstack": {
        "@tanstack/electric-db-collection": "^0.2.18",
        "@tanstack/react-form": "^1.27.5",
        "@tanstack/react-db": "^0.1.59",
        "@tanstack/react-devtools": "0.8.4",
        "@tanstack/react-query": "^5.90.12",
        "@tanstack/router-plugin": "^1.142.7",
        "@tanstack/react-router": "^1.142.7",
        "@tanstack/react-router-ssr-query": "^1.142.7",
        "@tanstack/react-start": "^1.142.7",
        "@tanstack/react-store": "^0.8.0",
        "@tanstack/react-table": "8.21.3",
        "@tanstack/react-router-devtools": "1.142.7",
        "@tanstack/react-query-devtools": "5.91.1",
        "@tanstack/query-db-collection": "^1.0.11"
      },
      "billing": {
        "autumn-js": "^0.1.62"
      }
    }
  },
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "test": "bun --filter '*' test",
    "check": "bun --filter '*' run check",
    "clean": "rm -rf apps/*/node_modules packages/*/node_modules node_modules bun.lock",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "lint": "bunx oxlint@latest",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.19.0",
    "oxlint": "^1.34.0",
    "typescript": "^5"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,vue,astro,svelte}": "oxlint",
    "*": "oxfmt --no-error-on-unmatched-pattern"
  }
}
